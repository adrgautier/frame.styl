html {
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

html * {
	-moz-box-sizing: inherit;
	box-sizing: inherit;
}
 
body{
    position: relative;
    display: block;
    margin: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    font-family: 'Source Sans Pro', sans-serif;
    overflow-y: scroll;
    background-color : light;
    color: darkblue;
}



main{
    position: relative;
    display: block;
	background-color: white;
    container(1080px, 32px, 800px, 32px)
    padding-bottom: 2em;
    overflow: auto;
}
footer{
    position: relative;
    display: block;
    padding: .5em 0;
    font-size: 1em;
    background-color: darkblue;
    color: white;
    container(none, 0, 800px, 64px)

}

h1{
    width: 100%;
    text-align: center;
    font-size: 4em;
    font-weight: 200;
    &>span{
        font-family: 'Courgette', cursive;
        color: cyan;
    }
}

h2{
    position relative
    display: inline-block;
    background-color: darkblue;
    color: white;

    line-height: 1em;
    font-size 2em;
    font-weight: 600;
    padding: 12px 18px 12px 12px;
    text-transform: uppercase;
    &>a{
        position: relative;
        bottom: -6px;
        display: inline-block;
        width: 18px;
        height: 3px;
        background-color: cyan;
    }
}

h3{
    color: darkblue;
    font-weight 600;
    text-transform: uppercase;
    &:before{
        content: "_";
    }
}


pre{
    border: 1px solid light;
    border-radius: 4px;
}
.area{
    background-color: light;
    border-radius: 4px;
    overflow: hidden;
}
.important{
    overflow: auto;
    margin: 0.5em 0;
    border-radius: 4px;
    padding: 0 1em;
    background-color:  alpha($base0a,0.3);
}

a{
    color: blue;
    &:visited{
        color: darkblue;
    }
}

