#columns{
    [class*=demo]>div{
        background: white_img , cyan_img;
        background-clip: content-box, padding-box;
    }

    .demo1{
        columns(7 right, "div", 12px space-between, 12px equal, 1 -1 1 3, 2 3 1)
        &>div:before,&>div:after{
            content: "";
            position: absolute;
            top: 0;
            width: 0;
            height: 9999px;
            border-left: 1px dashed white;
        }
        &>div:before{
            left: -1px;
        }
        &>div:after{
            right: -1px;
        }
    }
}